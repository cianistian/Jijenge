name: Android APK Build

on:
  push:
    branches:
      - main # Change 'main' to your branch name if different

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # Step 1: Check out the code
      - name: Checkout Repository
        uses: actions/checkout@v3

      # Step 2: Set up Node.js
      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '16'

      # Step 3: Install Dependencies
      - name: Install Dependencies
        run: |
          npm install

      # Step 4: Set up Expo CLI
      - name: Install Expo CLI
        run: |
          npm install -g expo-cli

      # Step 5: Build APK using Expo (classic build system)
      - name: Build APK
        run: |
          expo build:android --no-publish --release-channel production

      # Step 6: Upload APK as artifact (you can specify the correct path here)
      - name: Upload APK
        uses: actions/upload-artifact@v3
        with:
          name: app-release.apk
          path: ./build/android/app-release.apk
